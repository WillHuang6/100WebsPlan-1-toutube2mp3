{
  "functions": {
    "app/api/convert/route.ts": {
      "maxDuration": 60
    },
    "app/api/status/[taskId]/route.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/temp/(.*)",
      "destination": "/temp/$1"
    }
  ],
  "headers": [
    {
      "source": "/temp/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}